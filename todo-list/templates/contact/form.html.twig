{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block pageTitle %} Formulaire de contact {% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-8 max-w-lg w-full">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Nous contacter</h2>
        
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        
        <div>
            {{ form_label(form.name, 'Nom', {'attr': {'class': 'block text-gray-700 dark:text-gray-200'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        
        <div>
            {{ form_label(form.email, 'Email', {'attr': {'class': 'block text-gray-700 dark:text-gray-200'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        
        <div>
            {{ form_label(form.message, 'Message', {'attr': {'class': 'block text-gray-700 dark:text-gray-200'}}) }}
            {{ form_widget(form.message, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        
        <div>
            {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600'}}) }}
        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
